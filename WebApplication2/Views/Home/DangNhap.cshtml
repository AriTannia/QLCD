@model WebApplication2.ViewModels.LoginVM

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (ViewData.ModelState.IsValid == false)
{
    <div class="alert alert-danger" role="alert">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            @error.ErrorMessage <br />
        }
    </div>
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thông tin cá nhân</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>
    <div class="section-one">
        <div class="container">
            <div class="login">
                <h1>Trang Đăng Nhập</h1>
                <form method="post" asp-action="DangNhap" asp-controller="Home">
                    <div class="form-group">
                        <label asp-for="MaKh"></label>
                        <input asp-for="MaKh" class="form-control" />
                        <span asp-validation-for="MaKh" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MatKhau"></label>
                        <input asp-for="MatKhau" type="password" class="form-control" />
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Đăng Nhập</button>
                </form>
            </div>
        </div>
    </div>

    <style>
        .section-one {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        h1 {
            text-align: center;
        }

        .login button {
            margin: 15px auto;
            width: 100%;
            border: none;
            padding: 10px 20px;
        }
    </style>

    <style>
        .section-one {
            height: 100vh;
        }

        .container-1 {
            height: 100%;
            margin: 200px 400px;
        }

        h1 {
            text-align: center;
            color: #333;
            /* Màu chữ đen */
        }

        label {
            color: #555;
            /* Màu chữ xám */
        }

        input[type="text"],
        input[type="password"],
        button {
            background-color: #ffffff;
            /* Màu nền trắng */
            color: #333;
            /* Màu chữ đen */
            border: 1px solid #ccc;
            /* Viền đậm */
        }

        button {
            background-color: #ccc;
        }

            button:hover {
                cursor: pointer;
                background-color: #f5f5f5;
                /* Màu nền nhạt khi hover */
            }

            button:focus {
                outline: none;
            }
    </style>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
</body>

</html>
