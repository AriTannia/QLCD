@using Microsoft.AspNetCore.Mvc.ViewFeatures
@model WebApplication2.ViewModels.RegisterVM

@{
    ViewData["Title"] = "Chức năng đăng ký";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Đăng ký Tài Khoản Mới</h1>
        <form asp-action="DangKy" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-12 col-lg-6">
                    <div class="form-item w-100">
                        <label asp-for="MaKh" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="MaKh" class="form-control">
                        <span asp-validation-for="MaKh" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12 col-lg-6">
                    <label asp-for="MatKhau" class="form-label my-3"></label><sup>*</sup>
                    <input asp-for="MatKhau" class="form-control">
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>
                <div class="form-item">
                    <label class="form-label my-3" asp-for="HoTen"></label><sup>*</sup>
                    <input asp-for="HoTen" class="form-control" />
                    <span asp-validation-for="HoTen" class="text-danger"></span>
                </div>

                <div class="form-check my-3">
                    <input asp-for="GioiTinh" class="form-check-input">
                    <label class="form-check-label" for="GioiTinh">Nam?</label>
                </div>

                <div class="form-item">
                    <label class="form-label my-3" asp-for="NgaySinh"></label>
                    <input asp-for="NgaySinh" class="form-control" />
                    <span asp-validation-for="NgaySinh" class="text-danger"></span>
                </div>

                <div class="form-item">
                    <label class="form-label my-3" asp-for="DiaChi"></label><sup>*</sup>
                    <input asp-for="DiaChi" class="form-control" />
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>

                <div class="form-item">
                    <label class="form-label my-3" asp-for="DienThoai"></label><sup>*</sup>
                    <input asp-for="DienThoai" class="form-control" />
                    <span asp-validation-for="DienThoai" class="text-danger"></span>
                </div>

                <div class="form-item">
                    <label class="form-label my-3" asp-for="Email"></label><sup>*</sup>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-item">
                    <label class="form-label my-3" for="Hinh">Hình<sup>*</sup></label>
                    <input type="file" name="Hinh" class="form-control" />
                </div>
            </div>
            <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng ký</button>
            </div>
        </form>
    </div>
</div>

<style>
    .error-popup {
        background-color: #f8d7da; /* Màu đỏ nhạt */
        color: #721c24; /* Màu chữ */
        padding: 10px 15px;
        border-radius: 5px;
        border: 1px solid #f5c6cb; /* Viền */
        margin-bottom: 20px; /* Khoảng cách với các phần tử khác */
    }
</style>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="error-popup">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
